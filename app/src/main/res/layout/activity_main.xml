<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.dcucharo.myinternalstorage.MainActivity">

    <EditText
        android:id="@+id/et_Message"
        android:layout_width="500px"
        android:layout_height="80px"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="56dp"
        android:layout_marginStart="56dp"
        android:layout_marginTop="156dp" />

    <Button
        android:id="@+id/btn_Save"
        android:layout_width="250px"
        android:layout_height="150px"
        android:onClick="saveMessage"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/et_Message"
        android:layout_marginStart="43dp"
        android:layout_marginTop="39dp"
        android:text="Save Message" />

    <Button
        android:id="@+id/btn_Display"
        android:layout_width="250px"
        android:onClick="displayMessage"
        android:layout_height="150px"
        android:layout_alignBaseline="@+id/btn_Save"
        android:layout_alignBottom="@+id/btn_Save"
        android:layout_marginStart="30dp"
        android:layout_toEndOf="@+id/btn_Save"
        android:text="Display Message" />

    <TextView
        android:id="@+id/tv_display"
        android:layout_width="200dp"
        android:layout_height="150dp"
        android:layout_below="@+id/btn_Display"
        android:layout_centerHorizontal="true"
        android:text="TextView" />
</RelativeLayout>